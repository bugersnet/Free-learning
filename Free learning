    <script>
        let currentLanguage = 'Python';
        let lessonCount = 12;
        let achievementCount = 8;
        let streakCount = 5;

        const codeExamples = {
            'Python': `print("Hello, World!")
print("Welcome to BugersNet!")

# Try changing this message
name = "Programmer"
print(f"Hello, {name}!")`,
            
            'JavaScript': `console.log("Hello, World!");
console.log("Welcome to BugersNet!");

// Try changing this message
let name = "Programmer";
console.log(\`Hello, \${name}!\`);`,
            
            'Java': `public class HelloWorld {
    public static void main(String[] args) {
        System.out.println("Hello, World!");
        System.out.println("Welcome to BugersNet!");
        
        String name = "Programmer";
        System.out.println("Hello, " + name + "!");
    }
}`,
            
            'C++': `#include <iostream>
#include <string>
using namespace std;

int main() {
    cout << "Hello, World!" << endl;
    cout << "Welcome to BugersNet!" << endl;
    
    string name = "Programmer";
    cout << "Hello, " + name + "!" << endl;
    return 0;
}`,
            
            'HTML/CSS': `<!DOCTYPE html>
<html>
<head>
    <style>
        body { font-family: Arial; text-align: center; }
        h1 { color: #667eea; }
    </style>
</head>
<body>
    <h1>Hello, World!</h1>
    <p>Welcome to BugersNet!</p>
</body>
</html>`,
            
            'Swift': `import Foundation

print("Hello, World!")
print("Welcome to BugersNet!")

// Try changing this message
let name = "Programmer"
print("Hello, \\(name)!")`
        };

        function scrollToLanguages() {
            document.getElementById('languages').scrollIntoView({ behavior: 'smooth' });
        }

        function selectLanguage(language) {
            currentLanguage = language;
            document.getElementById('current-language').textContent = `${language} - Hello World`;
            document.getElementById('code-editor').value = codeExamples[language];
            
            // Simulate output based on language
            let output = '';
            if (language === 'HTML/CSS') {
                output = 'HTML page rendered successfully!<br>Check the preview to see your webpage.';
            } else {
                output = 'Hello, World!<br>Welcome to BugersNet!<br>Hello, Programmer!';
            }
            document.getElementById('output').innerHTML = output;
            
            // Scroll to practice section
            document.getElementById('practice').scrollIntoView({ behavior: 'smooth' });
        }

        function runCode() {
            const code = document.getElementById('code-editor').value;
            const output = document.getElementById('output');
            
            // Simulate code execution
            if (code.trim() === '') {
                output.innerHTML = '<span style="color: #ff6b6b;">Error: No code to run!</span>';
                return;
            }
            
            // Simple simulation based on common patterns
            let result = '';
            const lines = code.split('\n');
            
            lines.forEach(line => {
                if (line.includes('print(') || line.includes('console.log(') || line.includes('System.out.println(') || line.includes('cout <<')) {
                    // Extract content between quotes or parentheses
                    const match = line.match(/["'`]([^"'`]*)["'`]/);
                    if (match) {
                        result += match[1] + '<br>';
                    } else if (line.includes('Hello')) {
                        result += 'Hello, World!<br>';
                    }
                }
            });
            
            if (result === '') {
                result = 'Code executed successfully!<br>Output depends on your program logic.';
            }
            
            output.innerHTML = result;
            
            // Update progress
            lessonCount++;
            document.getElementById('lessons-completed').textContent = lessonCount;
        }

        function resetCode() {
            document.getElementById('code-editor').value = codeExamples[currentLanguage];
            document.getElementById('output').innerHTML = 'Hello, World!<br>Welcome to BugersNet!<br>Hello, Programmer!';
        }

        function nextLesson() {
            lessonCount++;
            document.getElementById('lessons-completed').textContent = lessonCount;
            
            const lessons = [
                'Variables and Data Types',
                'Control Structures',
                'Functions and Methods',
                'Object-Oriented Programming',
                'Error Handling',
                'File Operations'
            ];
            
            const randomLesson = lessons[Math.floor(Math.random() * lessons.length)];
            document.getElementById('current-language').textContent = `${currentLanguage} - ${r
